<section id="contact">
  <div class="col-md-12 col-sm-6 col-xs-12">
    <div class="contact-right wow fadeInRight">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">

<%= f.label :name %><br />

  <%= f.text_field :name,class: 'form-control' , placeholder: "more than 5 char", autofocus: true %>
</div>



<div class="form-group">

<%= f.label :name %><br />

<%= f.text_field :name,class: 'form-control' , placeholder: "more than 5 char", autofocus: true %>
</div>




  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>


  <div class="form-group">
    <%= f.label :Birth_Day %><br />
    <%=  f.date_select :dob,class: 'form-control' , start_year: 1979 ,class: 'form-control' %>

  </div>
  <hr>

            <hr>
            <div class="form-group">

              <% if current_user.gender == 'Male' %>
                  <% @male = true
                     @female = false
                  %>
              <% else %>
                  <%
                    @male = false
                    @female = true
                  %>
              <% end %>
              <%= f.label :gender %> <br>
              <%= f.radio_button :gender  , "Male" ,:checked => @male%>
              <%= f.label :gender  , "Male" %>
              <%= f.radio_button :gender , "Female" ,:checked => @female%>
              <%= f.label :gender  , "Female" %>
            </div>


            <hr>
            <div class="form-group">

         <% if current_user.role == "instructor" %>
         <% @instructor = false
           @student = true
         %>
             <% else %>
             <%
               @instructor = true
               @student = false
             %>
         <% end %>

       <%= f.label :role,"Register As Student Or Instructor" %> <br>
          <%= f.radio_button :role  , "instructor" , :checked => @student %>
           <%= f.label :role  , "instructor" %>
            <%= f.radio_button :role , "student",:checked => @instructor %>
        <%= f.label :role  , "student" %>
       </div>


       <div class="form-group">

         <%= f.label :avatar, "Choose Your Avatar Picture" %>
         <%= f.file_field :avatar%>
       </div>






  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
<%= render "users/shared/links" %>

<%= link_to "Back", :back %>
