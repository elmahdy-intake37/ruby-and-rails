<section id="contact">
  <div class="col-md-12 col-sm-6 col-xs-12">
    <div class="contact-right wow fadeInRight">
      <h1> Create A Course</h1>


<%= form_for(@course,class: 'contact-form') do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="from-group">
    <%= f.label :title %><br>
    <%= f.text_field :title,class: 'form-control',autofocus: true %>
  </div>
  <div class="from-group">

  <%= f.label :User_id %><br>
  <%= f.number_field :User_id ,placeholder: "please check ur id from admin and try to insert it in field" %>

</div>
  <div class="form-group">
    <%= f.label :image , "Upload a Course Image" %><br />
    <%= f.file_field :image,class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Create Course" ,class: 'btn btn-warning'%>
  </div>
<% end %>

</div>
</div>
</section>
