<section id="contact">
  <div class="col-md-12 col-sm-6 col-xs-12">
    <div class="contact-right wow fadeInRight">

      <h1>Create A Lecture</h1>
      <%= form_for(@lecture,class: 'contact-form') do |f|%>

          <ul>
            <% @lecture.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end%>
          </ul>

            <hr>
          <div class="form-group">
            <%= f.label :Course_id , 'Choose A Course' %><br />
            <%= f.select :Course_id, options_for_select(Course.all.map{|s|[s.title, s.id]}) %>

          </div>

          <div class="form-group">
            <%= f.label :title %><br />
            <%= f.text_field :title,class: 'form-control' ,autofocus: true %>
          </div>



          <div class="form-group">
            <%= f.label :content %><br />
            <%= f.cktext_area :content,class: 'form-control'  %>
          </div>


          <div class="form-group">
            <%= f.label :image , "Upload a Lecture Image" %><br />
            <%= f.file_field :image,class: 'form-control' %>
          </div>


          <!-- <div class="form-group">
            <%= f.label :attachement, "Upload Attachements" %><br />
            <%= f.file_field :attachement ,class: 'form-control' %>
          </div> -->

          <div class="from-group">

          <%= f.label :User_id %><br>
          <%= f.number_field :User_id ,placeholder: "please check ur id from admin and try to insert it in field" %>

        </div>


          <div class="well">
              <%= f.label :name %>
              <%= f.text_field :name %>
              <%= f.label :attachment %>
              <%= f.file_field :attachment %>
          </div>


          <%= f.submit "Create Lecture" ,class: 'btn btn-info' %>

      <% end %>

        </div>
    </div>
  </section>
