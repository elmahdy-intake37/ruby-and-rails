<!-- Start blog section -->
<section id="blog">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="blog-area">
          <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
              <div class="blog-left blog-details">
                <!-- Start single blog post -->
                <article class="single-from-blog">
                  <div class="blog-title">

<p id="notice"><%= notice %></p>

<h1>Listing Lectures</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Attchment</th>
      <th>User</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lecture.each do |lecture| %>
      <tr>

        <td><%= lecture.User.try(:name) %></td>
        <td><%= lecture.Course %></td>
        <div class="blog-details-content">

          <%= lecture.content.html_safe %>


                         </div>



         <td><%= link_to ' Like ', upvote_lecture_path(lecture), method: :put   %>  <span>|</span> </td>

         like
         <%= lecture.get_upvotes.size %>


         <span>|</span>

        <td><%= link_to 'Spam', downvote_lecture_path(lecture), method: :put %></td>
        spam
        <%= lecture.get_downvotes.size %>


        <% if lecture.attachment.file %>
        <td><%= link_to "Download Lecture", lecture.attachment_url,class: 'btn btn-default' %></td>

                                <% end %>


          <h2><%= lecture.title %></h2>

                          </div>


        <figure>
            <%= image_tag(lecture.image)%>
      </figure>

        <div class="blog-details-content">

          <%= lecture.content.html_safe %>


                         </div>

      </article>
     <div   style="  font-size: 20px;" id ='comments-container' >

      </div>
             <!-- End single blog post -->
           </div>
         </div>

       </div>
     </div>
   </div>
 </div>
</div>
</section>
<!-- End blog section -->
<div class="container">
      <% if can? :destroy, @lecture %>
      <td><%= link_to 'Destroy', lectures_destroy_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
<!-- lecture, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{lecture.content}?" -->
        <!-- <td><%= link_to 'Destroy', lecture, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    </div>
    <% end %>
  </tbody>
</table>

